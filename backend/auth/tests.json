{
  "tests": [
    {
      "name": "Login with valid credentials",
      "method": "POST",
      "path": "/",
      "body": {
        "username": "admin",
        "password": "123"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "token": "string",
        "user": {
          "id": "number",
          "username": "string",
          "role": "string"
        }
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Login with invalid credentials",
      "method": "POST",
      "path": "/",
      "body": {
        "username": "admin",
        "password": "wrong"
      },
      "expectedStatus": 401
    },
    {
      "name": "Missing token returns 401",
      "method": "GET",
      "path": "/",
      "expectedStatus": 401
    }
  ]
}