{
  "tests": [
    {
      "name": "OPTIONS request for CORS",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200,
      "expectedBody": "",
      "bodyMatcher": "exact"
    },
    {
      "name": "GET messages with auth",
      "method": "GET",
      "path": "/",
      "headers": {
        "X-Admin-Auth": "admin:123"
      },
      "expectedStatus": 200,
      "bodyMatcher": "partial"
    },
    {
      "name": "GET messages without auth should fail",
      "method": "GET",
      "path": "/",
      "expectedStatus": 401,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    }
  ]
}
